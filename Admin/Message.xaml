<Page x:Class="ElectronicMagazine.Admin.Message"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicMagazine.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Message">

    <Grid HorizontalAlignment="Center" Width="800" Height="450" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="159*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="IDFlorist1" AutoGenerateColumns="False" IsReadOnly="True" Margin="17,60,384,19" Grid.Column="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding IDUser}" Width="40"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding FIO}" Width="570"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Height="294" Margin="283,64,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="335" OpacityMask="Black"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="277,396,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332"/>

        <Button x:Name="Button2" Content="Новости и &#xD;&#xA;обновления" HorizontalAlignment="Left" Height="53" Margin="0,42,0,0" VerticalAlignment="Top" Width="145" Click="Button2_Click" FontSize="18"/>
        <Button x:Name="Button3" Content="Документы" HorizontalAlignment="Left" Height="34" Margin="0,0,0,306" VerticalAlignment="Bottom" Width="145" Click="Button3_Click" FontSize="18"/>
        <Button x:Name="Button4" Content="Профиль" HorizontalAlignment="Left" Height="33" Margin="0,194,0,0" VerticalAlignment="Top" Width="145" Click="Button4_Click" FontSize="18"/>
        <Button x:Name="Button1" Content="Сообщения" HorizontalAlignment="Left" Height="33" Margin="0,2,0,0" VerticalAlignment="Top" Width="145" Click="Button1_Click" FontSize="18"/>
        <Button x:Name="Button6" Content="Преподаватели" HorizontalAlignment="Left" Height="33" Margin="0,281,0,0" VerticalAlignment="Top" Width="145" Click="Button6_Click" FontSize="18"/>
        <Button x:Name="Button7" Content="Расписание" HorizontalAlignment="Left" Height="34" Margin="0,324,0,0" VerticalAlignment="Top" Width="145" Click="Button7_Click" FontSize="18"/>
        <Button x:Name="Button5" Content="Студенты" HorizontalAlignment="Left" Height="33" Margin="0,235,0,0" VerticalAlignment="Top" Width="145" Click="Button5_Click" FontSize="18"/>
        <Button x:Name="Button8" Content="Ссылки на &#xD;&#xA;ресурсы" HorizontalAlignment="Left" Height="55" Margin="1,383,0,0" VerticalAlignment="Top" Width="145" Click="Button8_Click" FontSize="18"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="11,13,0,0" TextWrapping="Wrap" Text="Поиск" VerticalAlignment="Top" Width="240"/>

    </Grid>
</Page>
